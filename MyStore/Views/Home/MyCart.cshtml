@model IEnumerable<MyStore.Models.Product>
<h2> My Cart</h2>
@if (Model.Any())
{
    if (Model.Count() > 0)
    {

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Remove", "Remove", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

        <h2>Total Price : @ViewBag.Total</h2>

        <a href="@Url.Action("SubmitOrder", "Home")">Check Out!</a>
    }
    else
    {
        <p>No items!</p>
    }
}
else
{
    <p>No items!</p>
}